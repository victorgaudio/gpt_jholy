# AnythingLLM - Configuração para Produção gpt.jholy.com.br
# Deploy Digital Ocean com SSL automático

SERVER_PORT=3001
STORAGE_DIR="/app/server/storage"
UID='1000'
GID='1000'

# CONFIGURAÇÕES DE SEGURANÇA - GERADAS SEGURAMENTE
SIG_KEY='YOUR_RANDOM_32_CHAR_SIG_KEY_HERE'
SIG_SALT='YOUR_RANDOM_32_CHAR_SIG_SALT_HERE'
JWT_SECRET="YOUR_RANDOM_JWT_SECRET_HERE"
JWT_EXPIRY="30d"

# AUTENTICAÇÃO PARA PRODUÇÃO
AUTH_TOKEN="YOUR_SECURE_PASSWORD_HERE" # Password para acessar https://gpt.jholy.com.br

###########################################
######## LLM PROVIDER PARA PRODUÇÃO ######
###########################################
# OpenAI (mesma configuração do desenvolvimento)
LLM_PROVIDER='openai'
OPEN_AI_KEY=YOUR_OPENAI_API_KEY_HERE
OPEN_MODEL_PREF='gpt-4o-mini'

# Anthropic (Alternativa)
# LLM_PROVIDER='anthropic'
# ANTHROPIC_API_KEY=sk-ant-your-api-key-here
# ANTHROPIC_MODEL_PREF='claude-3-sonnet-20240229'

# Groq (Rápido e econômico)
# LLM_PROVIDER='groq'
# GROQ_API_KEY=gsk_your-api-key-here
# GROQ_MODEL_PREF=llama3-8b-8192

###########################################
######## EMBEDDING PARA PRODUÇÃO #########
###########################################
# Usar native embeddings como no desenvolvimento (mais simples para início)
EMBEDDING_ENGINE='native'
EMBEDDING_MODEL_PREF='Xenova/all-MiniLM-L6-v2'

# OpenAI Embeddings (alternativa para melhor qualidade)
# EMBEDDING_ENGINE='openai'
# EMBEDDING_MODEL_PREF='text-embedding-ada-002'

###########################################
######## VECTOR DATABASE #################
###########################################
# PostgreSQL para produção (mais robusto que SQLite)
VECTOR_DB="pgvector"
PGVECTOR_CONNECTION_STRING="postgresql://anythingllm:YOUR_POSTGRES_PASSWORD_HERE@postgres:5432/anythingllm"
PGVECTOR_TABLE_NAME="anythingllm_vectors"

###########################################
######## CONFIGURAÇÕES DE PRODUÇÃO #######
###########################################
# Habilitar telemetria (opcional)
DISABLE_TELEMETRY="false"

# Configurações de senha seguras
PASSWORDMINCHAR=8
PASSWORDMAXCHAR=250
PASSWORDLOWERCASE=1
PASSWORDUPPERCASE=1
PASSWORDNUMERIC=1
PASSWORDSYMBOL=1
PASSWORDREQUIREMENTS=4

###########################################
######## AUDIO MODELS ####################
###########################################
# OpenAI Whisper para produção (melhor qualidade)
WHISPER_PROVIDER="openai"
# OPEN_AI_KEY já definido acima

# TTS OpenAI para produção
TTS_PROVIDER="openai"
TTS_OPEN_AI_KEY=YOUR_OPENAI_API_KEY_HERE
TTS_OPEN_AI_VOICE_MODEL=nova

###########################################
######## CONFIGURAÇÕES AVANÇADAS #########
###########################################
# Idiomas para OCR (português incluído)
TARGET_OCR_LANG=eng,por,spa,fra

# Configurações para Docker
ANYTHINGLLM_CHROMIUM_ARGS="--no-sandbox,--disable-setuid-sandbox"

# Configurações específicas para gpt.jholy.com.br
DISABLE_TELEMETRY="false"
ENABLE_HTTPS="false"  # Nginx lidará com SSL

###########################################
######## CONFIGURAÇÕES DE DOMÍNIO ########
###########################################
# Configurações específicas para gpt.jholy.com.br
DOMAIN_NAME="gpt.jholy.com.br"
SERVER_HOST="https://gpt.jholy.com.br"

###########################################
######## AGENT SERVICE KEYS ##############
###########################################
# Serviços de busca para agentes (opcional)
# AGENT_GSE_KEY=your-google-search-key
# AGENT_GSE_CTX=your-google-search-context
# AGENT_SERPER_DEV_KEY=your-serper-key
# AGENT_TAVILY_API_KEY=your-tavily-key

###########################################
######## DEPLOY gpt.jholy.com.br #########
###########################################
# Status: Configurado para deploy no Digital Ocean
# SSL: Let's Encrypt via Nginx reverse proxy
# Domínio: gpt.jholy.com.br
# Acesso: https://gpt.jholy.com.br
# Senha: YOUR_SECURE_PASSWORD_HERE
#
# Deploy: cd cloud-deployments/digitalocean/terraform && terraform apply